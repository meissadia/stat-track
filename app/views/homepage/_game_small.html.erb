<div class="game_small">
  <div class="background" style="background-image: url('<%= image_path "courts/#{game.abbr}.gif"%>')"></div>
  <div class="columns-two game_teams center content">
    <div class="center col1">
      <!-- Home Team -->
      <%= link_to (image_tag teamLogo(game.abbr)), "/team/#{game.team_id}" %><br/>
      <div class="<%= if !game.boxscore_id.eql?(0) && game.win then 'win' end %>">
        <%= if !game.boxscore_id.eql?(0) then "%i" % [game.team_score] else "&nbsp;".html_safe end %>
      </div>
    </div><div class="center col2">
      <!-- Away Team -->
      <%= link_to (image_tag teamLogo(game.opponent)), "/team/#{game.opponent_id}" %><br/>
      <div class="<%= if !game.boxscore_id.eql?(0) && !game.win then 'win' end %>">
        <%= if !game.boxscore_id.eql?(0) then "%i" % [game.opp_score] else "&nbsp;".html_safe end %>
      </div>
    </div>
    <div class="game_time">
      <!-- Game Time or Boxscore link -->
      <%= !game.boxscore_id.eql?(0) ? (link_to "Boxscore", "/game/#{game.boxscore_id}") : "%s EST" % [game.gdate.strftime('%I:%M %p')] %>
    </div>
  </div>
</div>
